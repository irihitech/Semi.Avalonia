                        Classes="H6"
                        Text="Semi Avalonia"
                        Theme="{DynamicResource TitleTextBlock}" />
                    <TextBlock
                        Margin="8,0"
                        VerticalAlignment="Center"
                        Text="/" />
                    <TextBlock
                        Margin="8,0"
                        VerticalAlignment="Center"
                        Classes="Secondary"
                        Text="{Binding #tab.SelectedItem.Header}" />
                </StackPanel>
