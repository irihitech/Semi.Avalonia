        <TabItem Header="TextBlock">
            <pages:TextBlockDemo />
        </TabItem>
        <TabItem Header="TextBox">
            <pages:TextBoxDemo />
        </TabItem>
        <TabItem Header="ToggleButton">
            <pages:ToggleButtonDemo />
        </TabItem>
        <TabItem Header="ToggleSwitch">
            <pages:ToggleSwitchDemo />
